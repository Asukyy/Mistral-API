<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>Mistral API</title>
    <link rel="icon" type="image/x-icon" href="assets/favicon.ico" />
    {# <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" rel="stylesheet" /> #}
    {% block stylesheets %}
    <link href="/css/styles.css" rel="stylesheet" />
    {% endblock %}
</head>
{% block body %}
{% include 'partials/_navbar.html.twig' %}

<div class="messages-container">
    <div class="container">
        <h2>{{ container.name }}</h2> <!-- Titre du container -->
        <div class="messages">
            {% for message in messages %}
                <div class="message">
                    <p>{{ message.content }}</p>
                    <span>{{ message.timestamp|date('Y-m-d H:i') }}</span>
                </div>
            {% else %}
                <p>Aucun message dans ce container.</p>
            {% endfor %}
        </div>
    </div>
</div>

<div class="chat-interface">
    <a href="{{ path('container') }}" class="btn btn-primary">Retour aux containers</a>
    <form action="{{ path('envoyer_message') }}" method="post">
    <input type="hidden" name="container_id" value="{{ container.id }}" />
    <input type="text" name="message" class="chat-input" placeholder="Tapez votre message ici..." />
    </form>
</div>
<script>
document.querySelector('.chat-interface form').addEventListener('submit', function(e) {
    e.preventDefault();

    var messageContent = document.querySelector('.chat-interface input[name="message"]').value;
    var containerId = document.querySelector('input[name="container_id"]').value; // Assurez-vous que cet élément existe et a la bonne valeur

    var formData = new URLSearchParams();
    formData.append('message', messageContent);
    formData.append('container_id', containerId);

    fetch('{{ path("envoyer_message") }}', {
        method: 'POST',
        headers: {
            'X-Requested-With': 'XMLHttpRequest',
            'Content-Type': 'application/x-www-form-urlencoded',
        },
        body: formData
    })
    .then(response => response.json())
    .then(data => {
        if(data.status === 'success') {
            var messagesContainer = document.querySelector('.messages-container');
            var newMessage = document.createElement('div');
            newMessage.classList.add('message');
            newMessage.innerHTML = `<p>${data.messageContent}</p><span>${data.timestamp}</span>`;
            messagesContainer.appendChild(newMessage);

            document.querySelector('.chat-interface input[name="message"]').value = '';
        } else {
            // Gérer l'erreur
            console.error('Erreur : ', data.message);
        }
    });
});

</script>

{% endblock %}
</html>
